<h1><%= @business.name %></h1>
<div id="bl-details">
	<ul id="b-details">
		<li class="b-address">
			<%= @business.address %> <%= @business.city %>, <%= @business.state %> <%= @business.zip %>
		</li>
		<li class="b-phone">
			<%= @business.phone %>
		</li>
		<% if !@business.website.empty? %>
			<li class="b-website">
				<%= link_to "Visit Website", @business.website%>
			</li>
		<% end %>
		<% if !@business.email.empty? %>
			<li class="b-email">
				<a href="mailto:<%= @business.email %>">Send email</a>
			</li>
		<% end %>
	</ul>
	<% if @business.photo? %>
		<%= image_tag @business.photo.url(:lightbox), :class => "pad10 left" %>
	<% end %>
	<% if !@business.photo? %>
		<%= image_tag "/images/Joe.JPG", :class => "pad10 left" %>
	<% end %>

	<ul id="user-tools">
		<%= render 'user_options' %>
	</ul>
	<ul id="business-hours">
		<li class="title">
			Business Hours
		</li>
		<% if !@business.mon_hours.empty? %>
			<li class="dayOfWeek">
				<span class="left">Monday</span>
				<span class="right"><%= @business.mon_hours %></span>
				<div class="clear">
				</div>
			</li>
		<% end %>
		<% if !@business.tues_hours.empty? %>
			<li class="dayOfWeek">
				<span class="left">Tuseday</span>
				<span class="right"><%= @business.tues_hours %></span>
				<div class="clear">
				</div>
			</li>
		<% end %>
		<% if !@business.wed_hours.empty? %>
			<li class="dayOfWeek">
				<span class="left">Wednesday</span>
				<span class="right"><%= @business.wed_hours %></span>
				<div class="clear">
				</div>
			</li>
		<% end %>
		<% if !@business.thurs_hours.empty? %>
			<li class="dayOfWeek">
				<span class="left">Thursday</span>
				<span class="right"><%= @business.thurs_hours %></span>
				<div class="clear">
				</div>
			</li>
		<% end %>
		<% if !@business.fri_hours.empty? %>
			<li class="dayOfWeek">
				<span class="left">Friday</span>
				<span class="right"><%= @business.fri_hours %></span>
				<div class="clear">
				</div>
			</li>
		<% end %>
		<% if !@business.sat_hours.empty? %>
			<li class="dayOfWeek">
				<span class="left">Saturday</span>
				<span class="right"><%= @business.sat_hours %></span>
				<div class="clear">
				</div>
			</li>
		<% end %>
		<% if !@business.sun_hours.empty? %>
			<li class="dayOfWeek">
				<span class="left">Sunday</span>
				<span class="right"><%= @business.sun_hours %></span>
				<div class="clear">
				</div>
			</li>
		<% end %>
		<% if !@business.other_hours.empty? %>
			<li class="dayOfWeek">
				<span class="left"><%= @business.other_hours %></span>
				<div class="clear">
				</div>
			</li>
		<% end %>
	</ul>
	<div class="left clear pad10">
		<h4>about business</h4>

		<% if !@business.tag_line.blank? %>
			<span class="tagline"><%= @business.tag_line %></span>
		<% end %>
		
		<p><strong>Year established:</strong>&nbsp;<%= @business.year_established %></p>
		<p><strong>Payment methods:</strong>&nbsp;<%= @business.payment_method %></p>
		<% if !@business.parking.empty? %>
			<p><strong>Payment parking:</strong>&nbsp;<%= @business.parking %></p>
		<% end %>
		<% if !@business.description.blank? %>
			<p><strong>Description:</strong>&nbsp;<%= @business.description %></p>
		<% end %>
	</div>
	<div class="left clear pad10">
		<h4>Services</h4>
	</div>

</div><!-- ./bl-details -->

