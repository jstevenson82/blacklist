<% @articles.each do |article| %>
  <div>
    <p><%= link_to article.title, article.link %></p>
    <p><%= article.description %></p>
    <% @user = User.find(article.user_id) %>
    <p>Posted by <%= @user.firstname %> <%= @user.lastname %></p>
    <p><%= link_to 'comment on article', article %></p>
  </div>
<% end %>

