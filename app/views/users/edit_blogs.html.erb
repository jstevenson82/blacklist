<h1>Editing blog</h1>

	<% if @blog.photo.exists? then %>
		<%= image_tag @blog.photo.url(:show), :id => "blog-image", :class => "pad10 clear" %>
	<% end %>

	<%= form_for @blog, :url => update_blogs_path( @blog ) do |f| %>
	  <% if @blog.errors.any? %>
	    <div id="error_explanation">
	      <h2><%= pluralize(@blog.errors.count, "error") %> prohibited this blog from being saved:</h2>
	
	      <ul>
	      <% @blog.errors.full_messages.each do |msg| %>
	        <li><%= msg %></li>
	      <% end %>
	      </ul>
	    </div>
	  <% end %>
	
	  <div class="pad10 clear">
	    <%= f.label :title %><br />
	    <%= f.text_field :title %>
	  </div>
	  <div class="pad10">
	    <%= f.label :body %><br />
	    <%= f.text_area :body %>
	  </div>
	  <div class="actions pad10">
	    <%= f.submit %>
	  </div>
	<% end %>
	
	<%= link_to 'Dashboard', dashboard_path( current_user.id, :title => current_user.firstname + "-" + current_user.lastname ), :class => "pad10" %>