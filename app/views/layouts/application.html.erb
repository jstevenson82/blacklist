<!DOCTYPE HTML PUBLIC "-//W3C//DTD HTML 4.01 Transitional//EN" "http://www.w3.org/TR/html4/loose.dtd">
<html xmlns="http://www.w3.org/1999/xhtml">
    <head>
        <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
        <title>Home > The Black List > Cincinnati, Ohio > blacklist.com</title>
        <link rel="shortcut icon" href="/Favicon.ico" type="image/x-icon" />
        <link href="/stylesheets/master.css" media="screen" rel="stylesheet" type="text/css" />
        <script type="text/javascript" src="/javascripts/jquery.js"></script>
		<script type="text/javascript" src="/javascripts/application.js"></script>

    </head>
    <body>
        <div id="page">
            <div id="application">
                <div id="bl-header">
					<%= link_to image_tag('/images/cbllogo.png', :border => 0), homepage_path, :class => 'left' %>
                    <div id="nav-menu">
						<%= render :partial => 'shared/top-nav' %>
                    </div><!-- ./nav-menu -->
                    <div class="clear">
                    </div>
                </div>
                <!-- ./bl-header -->
                <div id="breadcrumbs">
                    <%= link_to "black list", homepage_path%>
                    &raquo; <%= link_to controller.controller_name, "/" + controller.controller_name%> &raquo; <%= controller.action_name -%>
                    <div class="clear">
                    </div>
                </div>
             	     <% unless flash[:notice].blank? %>
						<div id="flash" class="flash_html flash-sucess clear"><%= flash[:notice]%></div> 
					<% end %>
					<% unless flash[:error].blank? %>
						<div id="flash" class="flash_html flash-failure clear"><%= flash[:error]%></div> 
					<% end %>
					<% if flash[:error].blank? && flash[:notice].blank? %>
						<div id="flash">&nbsp;</div>
					<% end %>  
					                
                <div id="bl-home">

					<%= yield %>
		
				</div><!-- ./bl-home -->
                <div id="bl-footer">
                    <div id="nav-menu">
						<%= render :partial => 'shared/bottom-nav' %>
                    </div><!-- ./nav-menu -->
                </div>
                <!-- ./bl-footer -->
            </div>
            <!-- ./homepage -->
        </div>
        <!-- ./page -->
    </body>
</html>
