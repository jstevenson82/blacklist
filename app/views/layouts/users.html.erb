<!DOCTYPE HTML PUBLIC "-//W3C//DTD HTML 4.01 Transitional//EN" "http://www.w3.org/TR/html4/loose.dtd">
<html xmlns="http://www.w3.org/1999/xhtml">
    <head>
        <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
        <title>Dashboard > The Black List > Cincinnati, Ohio > blacklist.com</title>
        <link rel="shortcut icon" href="/Favicon.ico" type="image/x-icon" />
        <link href="/stylesheets/master.css" media="screen" rel="stylesheet" type="text/css" />
        <link rel="stylesheet" media="screen" href="/stylesheets/themes/base/ui.all.css" type="text/css">
        <link media="screen" rel="stylesheet" type="text/css" href="/stylesheets/tab.css" />
        <script src="/javascripts/jquery.js"></script>
        <script type="text/javascript" src="/javascripts/jquery.rails.js"></script>
		<script type="text/javascript" src="/javascripts/application.js"></script>
		<script src="/javascripts/ui/jquery.ui.core.js"></script>
        <script src="/javascripts/ui/jquery.ui.widget.js"></script>
        <script src="/javascripts/ui/jquery.ui.tabs.js"></script>
        <script>
			$(function() {
				$( "#tabs" ).tabs();
			});
		</script>
    </head>
    <body>
        <div id="page">
            <div id="user">
                <div id="bl-header">
                    <%= link_to image_tag('/images/cbllogo.png', :border => 0), homepage_path, :class => 'left' %>		
                    <div id="nav-menu">
						<%= render :partial => 'shared/top-nav' %>
                    </div><!-- ./nav-menu -->
                    <div class="clear">
                    </div>
                </div>
                <!-- ./bl-header -->
                <div id="breadcrumbs">
                    <%= link_to "black list", homepage_path%>
                    &raquo; 
                    <% if current_user %>
						<%= link_to "dashboard", dashboard_path( current_user.id, :title => current_user.firstname + "-" + current_user.lastname )%>
					<% end %>
                    <div class="clear">
                    </div>
                </div>
    
    	            <% unless flash[:notice].blank? %>
						<div id="flash" class="flash_html flash-sucess clear"><%= flash[:notice]%></div> 
					<% end %>
					<% unless flash[:error].blank? %>
						<div id="flash" class="flash_html flash-failure clear"><%= flash[:error]%></div> 
					<% end %>
					<% if flash[:error].blank? && flash[:notice].blank? %>
						<div id="flash">&nbsp;</div>
					<% end %>
                
                <div id="bl-home">
                	<% if current_user %>
						<%= yield %>
					<% else %>
						<h1>Please login to access the register user functions</h1>
					     <p>Click here to <%= link_to "login", :login %>
					<% end %>
	
				</div>
				      
                <div id="bl-footer">
                    <div id="nav-menu">
						<%= render :partial => 'shared/bottom-nav' %>
                    </div><!-- ./nav-menu -->
                </div>
                <!-- ./bl-footer -->
            </div>
            <!-- ./homepage -->
        </div>
        <!-- ./page -->
    </body>
</html>
