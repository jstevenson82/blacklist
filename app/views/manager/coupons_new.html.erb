<h1>New coupon</h1>
<h3><%= @business.name %></h3>

<%= form_for @coupon, :url => manager_create_coupons_path do |f| %>
  <% if @coupon.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@coupon.errors.count, "error") %> prohibited this coupon from being saved:</h2>

      <ul>
      <% @coupon.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="pad10">
    <%= f.label :headline %><br />
    <%= f.text_field :headline %>
  </div>
  <div class="pad10">
    <%= f.label :body %><br />
    <%= f.text_area :body %>
  </div>
  <div class="pad10">
    <%= f.label :expire %><br />
    <%= f.date_select :expire %>
  </div>
  <div class="pad10">
    <%= f.label :exclusion %><br />
    <%= f.text_field :exclusion %>
  </div>
    
  <input type="hidden" name="coupon[user_id]" value="<%= current_user.id %>">
  <input type="hidden" name="coupon[b_id]" value="<%= @business.id %>">
  
  <div class="actions pad10">
    <%= f.submit %>
  </div>
<% end %>


<%= link_to 'Back', coupons_manager_path(@business.id) %>
