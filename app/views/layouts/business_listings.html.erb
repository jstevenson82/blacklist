<!DOCTYPE HTML PUBLIC "-//W3C//DTD HTML 4.01 Transitional//EN" "http://www.w3.org/TR/html4/loose.dtd">
<html xmlns="http://www.w3.org/1999/xhtml">
    <head>
        <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
        <title>Home > The Black List > Cincinnati, Ohio > blacklist.com</title>
        <link href="/stylesheets/master.css" media="screen" rel="stylesheet" type="text/css" />
        <link rel="stylesheet" media="screen" href="/stylesheets/themes/base/ui.all.css" type="text/css">
        <link media="screen" rel="stylesheet" type="text/css" href="/stylesheets/tab.css" />
        <script src="/javascripts/jquery.js"></script>
		<script src="/javascripts/ui/jquery.ui.core.js"></script>
        <script src="/javascripts/ui/jquery.ui.widget.js"></script>
        <script src="/javascripts/ui/jquery.ui.tabs.js"></script>
        <script>
			$(function() {
				$( "#tabs" ).tabs();
			});
		</script>
    </head>
    <body>
        <div id="page">
            <div id="manager">
                <div id="bl-header">
                    <%= image_tag('/images/cbllogo.png', :class => 'left') %>  
		
                    <div id="nav-menu">
						<%= render :partial => 'shared/top-nav' %>
                    </div><!-- ./nav-menu -->
                    <div class="clear">
                    </div>
                </div>
                <!-- ./bl-header -->
                <div id="breadcrumbs">
                    <%= link_to "black list", homepage_path%>
                    &raquo;
                    <div class="clear">
                    </div>
                </div>
    
    	            <% unless flash[:notice].blank? %>
						<div id="flash" class="flash_html flash-sucess clear"><%= flash[:notice]%></div> 
					<% end %>
					<% unless flash[:error].blank? %>
						<div id="flash" class="flash_html flash-failure clear"><%= flash[:error]%></div> 
					<% end %>
                
                <% if controller.action_name == "show" %>            
 					<%= render :partial => 'business_details' %>
				<% else %>					
	                <div id="bl-listings">
	                	<div id="b_categories">
	                		<%= render :partial => 'categories' %>
							<div class="clear"></div>
	                	</div>
						<div id="b_results">
							<%= yield %>
			                <div class="clear"></div>
						</div>
						<div id="right_rail">
							<%= render :partial => 'coupons' %>
						</div><!-- ./right_rail --> 
					</div><!-- ./bl-listings --> 
				<% end %>       
                <div id="bl-footer">
                    <div id="nav-menu">
						<%= render :partial => 'shared/bottom-nav' %>
                    </div><!-- ./nav-menu -->
                </div>
                <!-- ./bl-footer -->
            </div>
            <!-- ./homepage -->
        </div>
        <!-- ./page -->
    </body>
</html>
